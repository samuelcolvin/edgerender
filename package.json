{
  "name": "edgerender",
  "version": "0.0.9",
  "description": "Render at the edge",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "tsc": "tsc --build tsconfig.build.json",
    "build": "rm -rf dist && yarn tsc && cp -r edgerender/webpack dist/ && cp README.md LICENSE package.json dist/",
    "format": "prettier --write  '*.{json,js,toml}' 'edgerender/**/*.{ts,js}' 'tests/**/*.{ts,tsx}'",
    "lint": "eslint --max-warnings=0 edgerender && prettier --check '*.{json,js,toml}' 'edgerender/**/*.{ts,js}' 'tests/**/*.{ts,tsx}'",
    "test": "jest --config jest.config.js --verbose",
    "all": "yarn lint && yarn test"
  },
  "author": "Samuel Colvin",
  "license": "MIT",
  "homepage": "https://github.com/samuelcolvin/edgerender",
  "private": false,
  "keywords": [
    "jsx",
    "edge",
    "edgerender",
    "SSR",
    "CloudFlare-Workers",
    "typescript",
    "react",
    "webpack"
  ],
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "globals": {
      "xhr_calls": true
    },
    "extends": [
      "typescript",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-namespace": [
        "error",
        {
          "allowDeclarations": true
        }
      ]
    }
  },
  "dependencies": {
    "csstype": "^3.0.8",
    "mime": "^2.5.2"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "raw-loader": "^4.0.2",
    "sass": "^1.34.1",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@types/jest": "^26.0.23",
    "@types/mime": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "edge-mock": "0.0.3",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-typescript": "^3.0.0",
    "jest": "^27.0.1",
    "jest-each": "^27.0.2",
    "prettier": "^2.3.0",
    "prettier-plugin-toml": "^0.3.1",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2"
  }
}
