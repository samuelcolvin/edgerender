{
  "compilerOptions": {
    "outDir": ".",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": true,
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["edgerender"],
  "exclude": ["node_modules", "tests"]
}
