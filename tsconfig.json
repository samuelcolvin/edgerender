{
  "compilerOptions": {
    "outDir": "./test-build",
    "jsx": "react-jsx",
    "jsxImportSource": "edgerender",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "edgerender": [""],
      "edgerender/*": ["*"]
    },
    "types": ["@cloudflare/workers-types", "@types/jest", "node"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
