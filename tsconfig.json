{
  "compilerOptions": {
    "outDir": "./ts-build",
    "jsx": "react-jsx",
    "jsxImportSource": "edgerender",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "edgerender": ["edgerender"]
    },
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["src", "edgerender"],
  "exclude": ["node_modules", "dist", "test"]
}
