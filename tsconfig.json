{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "edgerender",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "",
    "paths": {
      "edgerender": ["edgerender/*"],
    },
    "types": ["@cloudflare/workers-types", "@types/jest"]
  },
  "include": ["src", "test-worker", "tests"],
  "exclude": ["node_modules", "dist"]
}
